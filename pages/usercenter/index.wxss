.base-info {
  position: relative;
  height: 330rpx;
  padding: 30rpx;
}
.avatar {
  width: 172rpx !important;
  height: 172rpx !important;
  display: block;
  margin: 0 auto;
  border-radius: 50%;
}

.nickname {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-top: 30rpx;
  line-height: 30rpx;
}
.edit {
  display: inline-block;
  vertical-align: middle;
  padding: 0 10rpx 0 5rpx;
}
.edit image{
  width: 30rpx;
  height: 30rpx;
}

.role {
  text-align: center;
  margin-top: 10rpx;
}
.role text{
  background: #4d4d4d;
  font-size: 20rpx;
  color: #fff;
  border-radius: 12px;
  font-weight: 500;
  padding: 0 10rpx;
}
.navigators{
  border-bottom: 1rpx solid #ddd;
  padding:20rpx 30rpx;
  align-items: center;
}
.group .navigators:last-child{
  border-bottom: none;
}

.navigators .icon{
  flex: 0 0 72rpx;
}
.navigators .icon image {
  width: 72rpx;
  height: 72rpx;
  padding: 15rpx;
}
.navigators .label{
  flex: 1;
  color: #967141;
  font-size: 24rpx;
  font-weight: 600;
  padding-left: 20rpx;
}
.navigators .arrow{
  color: #4d4d4d;
  font-size: 26rpx;
  font-weight: 600;
}