<tabs class="tabs" bindchange="tabChange" current="{{currentIndex}}">
  <tab-item wx:for="{{tabs}}" wx:key="tab-item-{{index}}" class="tab-item">
    <view class="text {{currentIndex === index ? 'active': ''}}">{{item.text}}</view>
    <view class="num">{{item.num}}</view>
  </tab-item>
</tabs>
