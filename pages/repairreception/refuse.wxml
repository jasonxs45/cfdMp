<view class="submit">
  <view class="section">
    <view class="form-bar">
      <view class="fb xingx">
        吴建军<text>13012345678</text>
      </view>
    </view>
  </view>
  <split />
  <view class="section">
    <view class="form-bar">
      <view class="fh">原因</view>
      <view class="fb">
        <textarea class="textarea" placeholder="请在此输入您要描述的信息"></textarea>
      </view>
    </view>
  </view>
  <split />
  <view class="section">
    <view class="form-bar">
      <view class="fh">拍摄照片（最多拍摄5张照片）</view>
      <view class="fb imgrow flex">
        <view wx:for="{{imgArr}}" wx:key="img-{{index}}" class="cell">
          <image src="{{item}}" mode="aspectFill" data-index="{{index}}" bindtap='previewImg' />
          <icon class="del" color='#f00' type="clear" data-index="{{index}}" bindtap='delImg' />
        </view>
        <view hidden='{{imgArr.length >= limit}}' class="cell" bindtap='chooseImg'>
          <view class="icon">
            <x-icon type="camera" />
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="btns">
  <x-btn loading='{{submitDisabled}}' imgBg="{{false}}" disabled='{{submitDisabled}}' type='primary' class="btn">提交</x-btn>
</view>