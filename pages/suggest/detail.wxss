page{
  background: #F5F5F5;
}
.card{
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  margin:30rpx 0;
  position: relative;
}
.card .mark{
  position: absolute;
  top:0;
  right:0;
  border-radius: 0 8rpx 0 0;
  background: #ccc;
  height: 30rpx;
  width: 80rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  color:#333;
  font-weight: 500;
}
.card:first-child{
  margin-top: 0;
}
.card .head{
  justify-content: space-between;
  align-items: center;
}
.card .head .tit{
  color: #666;
  font-size: 26rpx;
  font-weight: 400;
}
.card .head .date{
  font-size: 26rpx;
  color: #666;
  font-weight: 400;
}
.card .head .date2{
  color:rgba(150,113,65,1);
  background:rgba(254,240,229,0.5);
  padding: 0 34rpx;
  line-height: 48rpx;
}
.card .line{
  margin-top: 28rpx;
  display: block;
  border:2rpx solid rgba(238,238,238,1);
}
.card .body .desc{
  color: #131314;
  font-size: 24rpx;
  line-height: 34rpx;
  display: block;
  margin-top: 28rpx;
}
.card .body .tags{
  margin:15rpx -15rpx;
  font-size: 0;
}
.card .body .tags .tag{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 24rpx;
  padding: 0 30rpx;
  margin: 15rpx;
}
.textarea{
  background: #F5F5F5;
  color: #4d4d4d;
  width: 100%;
  border-radius: 4rpx;
  padding: 15rpx;
  font-size: 30rpx;
}
.imgrow {
  flex-wrap: wrap;
  margin: 30rpx -10rpx
}
.imgrow .cell{
  width: 20%;
  margin: 10rpx 0;
  position: relative;
}
.imgrow .cell image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  border-radius: 4rpx;
}

.section{
  padding: 30rpx;
  background: #fff;
}
.form-bar{
  display: block;
}
.fh{
  font-size:24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:34rpx;
}
.fb{
  font-size: 30rpx;
  margin-top: 30rpx;
}

