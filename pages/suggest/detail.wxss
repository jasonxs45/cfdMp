}

.imgrow .cell .icon {
  font-size: 60rpx;
  color: #999;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  line-height: 120rpx;
  text-align: center;
  border:1px dashed #333;
  border-radius: 4rpx;
}

