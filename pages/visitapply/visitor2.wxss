@import "./visitor.wxss";
.visitorMain{
  min-height: 70vh;
}
.form{
  padding: 30rpx;
}
.form-bar{
  display: block;
  margin-top: 30rpx;
}
.fh{
  width: 120rpx;
  font-size:24rpx;
  color:rgba(51,51,51,1);
  line-height:34rpx;
}
.fb{
  flex: 1;
  font-size:26rpx;
  color:rgba(51,51,51,1);
  line-height:34rpx;
}
.form-bar .fh{
  width: auto;
}
.form-bar .fb{
  font-size: 30rpx;
  margin-top: 30rpx;
  width: 100%;
}
.clearable-input{
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #F5F5F5;
  border-radius: 4rpx;
}
.textarea{
  width: 100%;
  height: 250rpx;
  color: #4d4d4d;
  background: #F5F5F5;
  border-radius: 8rpx;
  padding: 15rpx;
}
.input{
  width: 100%;
  height: 100%;
  color: #4d4d4d;
}
.select{
  box-sizing: border-box;
  padding: 0 15rpx;
  position: relative;
}
.select .icon{
  width: 50rpx;
  height:100%;
  line-height: inherit;
  position: absolute;
  top: 0;
  right:0 ;
  color: #666;
  font-size: 30rpx;
}
.select text{
  display: inline-block;
}
.select .placeholder{
  color: #888;
}
.visitorCy{
  text-align: center;
}
.visitorCy text{
  display:inline-block;
}
.visitorCy text:nth-child(1){
  width: 20%;
}
.visitorCy text:nth-child(2){
  width: 30%;
}
.visitorCy text:nth-child(3){
  width: 50%;
}