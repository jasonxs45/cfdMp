page{
  background: #f2f2f2;
}
.section{
  background: #fff;
  padding: 30rpx;
  margin-bottom: 10rpx;
}
.swiper{
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  border-radius: 8rpx;
}
.swiper .nav,
.swiper .img{
  width: 100%;
  height: 100%;
}

.list-wrapper .bg{
  background: #fff;
  padding:10rpx 30rpx;
}
.nav {
  height: auto;
  margin: 30rpx 0;
  background: #fff;
  overflow: hidden;
}

.nav .img{
  width: 200rpx;
  height: 200rpx;
}
.nav .detail{
  flex: 1;
  padding-left: 20rpx;
}
.nav .tit{
  font-size:34rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:48rpx;
}
.nav .label{
  margin-top: 5rpx;
  margin-bottom: 20rpx;
  height: 30rpx;
  overflow: hidden;
}
.nav .label text{
  font-size:20rpx;
  color:rgba(150,113,65,1);
  background:rgba(254,240,229,1);
  border-radius:4rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 16rpx;
  margin-right: 20rpx;
  vertical-align: top;
  display: inline-block;
}
.nav .address{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  height: 34rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.line{
  height:2rpx;
  background: rgba(238,238,238,1);
}
.nav .coucher{
  font-size:24rpx;
  line-height: 30rpx;
  margin-top: 10rpx;
  color:rgba(150,113,65,1);
}
.nav .coucher .count{
  font-weight: bold;
  font-size: 30rpx;
  display: inline-block;
  line-height: 1;
  vertical-align: top;
}
.nav .coucher .mark{
  font-size: 20rpx;
  margin-right: 10rpx;
  background: #967141;
  border-radius:4rpx;
  color:#fff;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 5rpx;
  display: inline-block;
  vertical-align: top;
}
.nav .info{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 30rpx;
}
.nav .cost{
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.nav .cost text{
  color: #666;
  font-size: 16rpx;
  font-weight: 400;
}
.nav .btn{
  width: 118rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin: 0;
  font-size: 28rpx;
  border-radius: 4rpx; 
  color: #fff !important;
}